<h1 class="mb-4"> <%= @question.title %> </h1>

<p>
  <%= @question.body %>
</p>

<%= link_to 'Show', question_path(@question), class: "btn btn-primary" %> 
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %> 
<%= link_to 'Delete', question_path(@question), class: 'btn btn-danger', data: {method: :delete, confirm: 'Are u sure?'} %>

<hr class="my-3">
<h4> Write your answer </h4>

  <%= render 'answers/form' %>

<h2 class="mt-5">Answers</h2>

<% @answers.each do |answer| %>
  <article class="mb-3 card" id="answer-<%= answer.id %>"> 
    <div class="card-body">
      <section class="card-text">
        <small><time datetime="<%= answer.created_at.strftime('%d %b %Y, %H:%M') %>">
          <%= answer.created_at.strftime('%d %b %Y, %H:%M') %>
        </time></small>

        <p class="mt-2 mb-3">
          <%= answer.body %>
        </p>
      </section>

      <%= link_to 'Edit', edit_question_answer_path(@question, answer), 
        class: 'btn btn-info btn-sm' %>
      <%= link_to 'Delete', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm',
        data: {method: :delete, confirm: "Are you sure?"} %>
    </div>
  </article>
<% end %>